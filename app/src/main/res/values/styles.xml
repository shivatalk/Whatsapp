<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">

    </style>

    <style name="Widget.App.Button.FilledButton.Filled" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">54dp</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.roundImage" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundImage" parent="">
        <item name="cornerSize">50%</item>
        <item name="android:scaleType">fitXY</item>
        <item name="cornerRadius">30dp</item>
    </style>


    <style name="setting_image" parent="">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="alpha">0.2</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="tint">@color/colorPrimary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.roundImage</item>
    </style>

    <style name="setting_title" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gblack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="ChatIcons">
        <item name="android:layout_width">43dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="rippleColor">@color/design_default_color_surface</item>
        <item name="iconTint">@color/black</item>
        <item name="backgroundTint">@color/design_default_color_surface</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_back</item>

    </style>

</resources>