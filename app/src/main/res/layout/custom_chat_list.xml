<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_picture"
        android:layout_width="61dp"
        android:layout_height="60dp"
        android:src="@drawable/shiva"
        android:scaleType="fitXY"
        android:backgroundTint="@color/white"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.roundImage"
        android:background="@color/colorAccent"
        />

    <LinearLayout
        android:id="@+id/msg_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/profile_picture">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="NameOfPerson"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/sub_msg"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello friends "
            style="@style/TextAppearance.MaterialComponents.Body2"
            />


    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/user_date"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"

        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/count"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/user_date"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.roundImage"
        />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="65dp"
        android:layout_below="@+id/area"
        android:background="@color/cardview_shadow_start_color"
        />

</RelativeLayout>