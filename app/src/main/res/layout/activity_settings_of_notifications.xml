<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsOfNotifications">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/conversation_tone"
                style="@style/layout_design"
                android:padding="0dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/setting_title"
                        android:text="Conversation tones" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play sounds for imcoming \n and outgoing messages." />

                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/send_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_shadow_start_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="Messages"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/notification_tone"
                style="@style/layout_design"
                android:padding="0dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/setting_title"
                    android:text="notification tone" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/notification_text"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default(None)" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/vibration"
                style="@style/layout_design"
                android:padding="0dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/setting_title"
                    android:text="Vibration" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/vibration_text"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/pop_notifications"
                style="@style/layout_design"
                android:padding="0dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/setting_title"
                    android:text="Popup notification" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/popup_text"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No popup" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/light"
                style="@style/layout_design"
                android:padding="0dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/setting_title"
                    android:text="Light" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/light_text"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="White" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/high_priority_notification"
                style="@style/layout_design"
                android:padding="0dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/setting_title"
                        android:text="Use high priority notifications" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show previews of notifications \n at the top of  the screen" />

                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/priority_notification_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_shadow_start_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="Groups"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/grp_notification"
                style="@style/layout_design"
                android:padding="0dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/setting_title"
                    android:text="Notification tone" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/group_text"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No popup" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/grp_vibration"
                style="@style/layout_design"
                android:padding="0dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/setting_title"
                    android:text="Vibrate" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/group_vibration_text"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="White" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/grp_pop_notifications"
                style="@style/layout_design"
                android:padding="0dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/setting_title"
                    android:text="Popup notification" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/grp_popup_text"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No popup" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/grp_pop_notification"
                style="@style/layout_design"
                android:padding="0dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/setting_title"
                    android:text="Light" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/group_popup_text"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="White" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/grp_high_priority_notification"
                style="@style/layout_design"
                android:padding="0dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/setting_title"
                        android:text="Use high priority notifications" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show previews of notifications\n at the top of \n the screen" />

                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/grp_priority_notification_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_shadow_start_color" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="Calls"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/calls_ringtone"
                style="@style/layout_design"
                android:padding="0dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/setting_title"
                    android:text="Ringtones" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/calls_text"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default ringtone" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/calls_vibrate"
                style="@style/layout_design"
                android:padding="0dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/setting_title"
                    android:text="Vibrate" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/calls_vibrate_text"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</LinearLayout>